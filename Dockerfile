# -------- BUILD STAGE --------
FROM gradle:8.6-jdk21 AS build
WORKDIR /app

COPY . .
RUN gradle clean build -x test

# -------- RUNTIME STAGE --------
FROM eclipse-temurin:21-jre-alpine
WORKDIR /app

COPY --from=build /app/build/libs/*.jar app.jar

EXPOSE 8080
ENTRYPOINT ["java","-jar","app.jar","--spring.profiles.active=docker"]
